{% set arch = platform.uname()|attr("machine") %}
{% set os = platform.system() %}
{% set clang_version = platform.os.popen("clang -dumpversion").read().split('.')[0] %}

[settings]
arch={{ arch }}
build_type=Release
compiler=clang
compiler.cppstd=gnu17
compiler.libcxx=libstdc++11
compiler.version={{ clang_version }}
os={{ os }}

[buildenv]
CXX=clang++
CC=clang
